<%= link_to "Ajouter une recettes", "/admin/recette/form", class: "w3-bar-item w3-button" %>

<ul>
  <% @recettes.each do |user, recettes| %>
    <li>
      <%= user.prenom %> <%= user.nom %>
        <ol>
          <% recettes.each do |recettes| %>
            </br>
            <li>
              <a href=recette/edit/<%= recettes.id %> style="padding:16px">Modifier   </a>
              <a href=recettes/<%= recettes.id %>><%= recettes.titre %></a>
            </li>
          <% end %>
          </br>
        </ol>
    </li>
  <% end %>
</ul>  
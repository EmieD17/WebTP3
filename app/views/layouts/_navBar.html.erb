<!-- Sidebar (hidden by default) -->
    <nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
      <a href="javascript:void(0)" onclick="w3_close()" class="w3-bar-item w3-button">Close Menu</a>
      <%= link_to "Accueil", "/" , class: "w3-bar-item w3-button" %>

      <% if user_signed_in? %>
        <%= link_to "Mes recettes", "/mesrecettes" , class: "w3-bar-item w3-button" %>

        <% if current_user.is_admin %>
          <%= link_to "Admin", "/admin/recettes", class: "w3-bar-item w3-button" %>
        <%end%>

        <%= link_to "Deconnection", destroy_user_session_path, method: :delete, class: "w3-bar-item w3-button" %>
        
      <% else %>
        <%= link_to "Connection", new_user_session_path, method: :get, class: "w3-bar-item w3-button" %>
      <%end%>

    </nav>

    <!-- Top menu -->
    <div class="w3-top">
      <div class="w3-white w3-xlarge" style="max-width:1200px;margin:auto">
        <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
        <div class="w3-right w3-padding-16">Bienvenue
          <% if user_signed_in? %>
            <%= current_user.nom %>
          <%end%>
        </div>
        <div class="w3-center w3-padding-16">Recettes</div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
      </br>
    </div>

    <script>
      <!-- Script to open and close sidebar -->
      function w3_open() {
        document.getElementById("mySidebar").style.display = "block";
      }
      
      function w3_close() {
        document.getElementById("mySidebar").style.display = "none";
      }
    </script>